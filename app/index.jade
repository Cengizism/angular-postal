		.col-md-3
			h3 Events
			hr

			//.btn-group(data-toggle='buttons')
			//	label.btn.btn-default.active
			//		input(type='checkbox', checked='', ng-model='logs.actions.self.active')
			//		| Log actions
			//	label.btn.btn-default.active
			//		input(type='checkbox', checked='')
			//		| Log system events
			//br
			//br

			ul.nav.nav-tabs(role='tablist')
				li.active
					a(href='#actions', role='tab', data-toggle='tab')
						| Actions &nbsp;
						span.label.label-default {{logs.actions.list.length}}
				li
					a(href='#system', role='tab', data-toggle='tab')
						| System &nbsp;
						span.label.label-default {{logs.system.list.length}}
			div.tab-content
				div#actions.tab-pane.fade.active.in
					logs(data='logs.actions.list')
				div#system.tab-pane.fade
					logs(data='logs.system.list')